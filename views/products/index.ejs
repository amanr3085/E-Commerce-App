<%- include("../partials/header") %> 
<%- include("../partials/navbar") %> 

<main class="container">
    <%- include("../partials/flash") %> 
    
    <section id="heading"> 
      <h4 class="display-5"><i class="fab fa-shopify" style="margin-right: 20px;"></i>Shopping-Cart</h4>
    </section>

    <div class="row">
        <%for(let product of products){%>
            <div class="col-lg-4 col-md-6 mb-3">
                <div class="card mx-auto " style="width: 20rem;">
                  <img src="<%=product.img%>" class="card-img-top" alt="Product Pic">
                  <div class="card-body">
                    <h5 class="card-title"><%=product.name%> </h5>
                    <p class="card-text"><%=product.desc.substring(0,100)%></p>
                    <h5 class="card-title">&#8377; <%=product.price%></h5>
                    <a href="/products/<%= product._id %> " class="btn btn-primary">Buy Now</a>
                  </div>
                </div>
            </div>
        <%}%>
    </div>

</main>


<%- include("../partials/footer") %> 